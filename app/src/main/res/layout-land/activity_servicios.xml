            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessLeaf" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#f0f0f0"
                android:hint="Datos del vehículo"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                tools:ignore="HardcodedText,ObsoleteLayoutParam" />

            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fafafa" >

                <TextView
                    android:padding="3dip"
                    android:text="Modelo" />
                <TextView
                    android:id="@+id/model_vehiculo"
                    android:text=""
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fafafa" >

                <TextView
                    android:padding="3dip"
                    android:text="Marca" />
                <TextView
                    android:id="@+id/marc_vehiculo"
                    android:text=""
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fafafa" >

                <TextView
                    android:padding="3dip"
                    android:text="Año" />
                <TextView
                    android:id="@+id/an_vehiculo"
                    android:text=""
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow11"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fafafa" >

                <TextView
                    android:padding="3dip"
                    android:text="Color" />
                <TextView
                    android:id="@+id/col_vehiculo"
                    android:text=""
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow112"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fafafa" >

                <TextView
                    android:padding="3dip"
                    android:text="Número de placas" />
                <TextView
                    android:id="@+id/pla_vehiculo"
                    android:text=""
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow113"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fafafa" >

                <TextView
                    android:padding="3dip"
                    android:text="Tipo" />
                <TextView
                    android:id="@+id/tip_vehiculo"
