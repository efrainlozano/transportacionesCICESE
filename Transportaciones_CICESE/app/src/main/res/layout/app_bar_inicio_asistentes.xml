<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.transporte.cicese.transportaciones_cicese.InicioAsistentesActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryText"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@android:color/background_light" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:id="@+id/scrollView4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="900dp">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/textback"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageView10"
                android:layout_alignTop="@+id/imageView10"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/imageView12"
                android:text="@string/bienvenido"
                android:textAlignment="center"
                android:textColor="@color/ColorActionBarTitle"
                android:textSize="20dp" />


            <ViewFlipper
                android:id="@+id/flipper1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView10"
                android:layout_marginTop="22dp"
                android:autoStart="true"
                android:flipInterval="3000"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right"
                tools:ignore="UselessLeaf,UselessParent">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/logocicese"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/instalaciones"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ensenada"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/mapa"
                    tools:ignore="ContentDescription" />

            </ViewFlipper>


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageView10"

                android:layout_alignStart="@+id/imageView10"
                android:layout_below="@+id/flipper1"
                android:layout_marginTop="24dp"
                android:text="@string/como_asistente"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView13"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="11dp"
                android:drawableLeft="@drawable/forma_iconp"
                android:drawablePadding="5dp"
                android:text="@string/registar_usuarios_y_solicitudes"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageView10"
                android:layout_alignStart="@+id/textView9"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/forma_iconp"
                android:drawablePadding="5dp"
                android:text="@string/int_msj_d"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView13"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView13"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/forma_iconp"
                android:drawablePadding="5dp"
                android:text="@string/update_service" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView14"
                android:layout_alignStart="@+id/textView14"
                android:layout_below="@+id/textView14"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/forma_iconp"
                android:drawablePadding="5dp"
                android:text="@string/consultas_info" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView2"
                android:layout_toStartOf="@+id/textView2"
                tools:ignore="ContentDescription,UnusedAttribute" />


            <Button
                android:id="@+id/irAUpdate"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_alignStart="@+id/irAConsultas"
                android:layout_below="@+id/irAConsultas"
                android:text="Actualizar servicios"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffff"
                android:background="@drawable/fast_button_style"
                android:drawableLeft="@drawable/update_icon_b"
                android:paddingLeft="15dp"/>

            <Button
                android:id="@+id/irAConsultas"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_below="@+id/irARegistros"
                android:layout_centerHorizontal="true"
                android:text="Consultar servicios"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/fast_button_style"
                android:textColor="#ffff"
                android:drawableLeft="@drawable/consults_icon_b"
                android:paddingLeft="15dp"/>



            <Button
                android:id="@+id/irARegistros"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:background="@drawable/fast_button_style"
                android:layout_below="@+id/textView15"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="43dp"
                android:text="Registrar usuarios y solicitudes"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:textColor="#ffff"
                android:drawableLeft="@drawable/forma_icon_b"
                android:paddingLeft="15dp">

            </Button>

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/irAUpdate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:text="@string/mayor_info"
                android:textSize="10sp" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
